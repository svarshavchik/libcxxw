<optclass name="testmainwindowoptions">
  <option>
    <name>nopadding</name>
    <type>bool</type>
    <default>false</default>
    <opt>p</opt>
    <longopt>nopadding</longopt>
    <descr>Do not use element padding</descr>
  </option>
  <option>
    <name>state</name>
    <type>bool</type>
    <default>false</default>
    <opt>s</opt>
    <longopt>state</longopt>
    <descr>Verify on_state_update() callbacks</descr>
  </option>
  <option>
    <name>usemain</name>
    <type>bool</type>
    <default>false</default>
    <opt>m</opt>
    <longopt>usemain</longopt>
    <descr>Change main window's color</descr>
  </option>
  <option>
    <name>showhide</name>
    <type>bool</type>
    <default>false</default>
    <opt>S</opt>
    <longopt>showhide</longopt>
    <descr>Change color via show()/hide()</descr>
  </option>
  <option>
    <name>usetheme</name>
    <type>bool</type>
    <default>false</default>
    <opt>t</opt>
    <longopt>usetheme</longopt>
    <descr>Change color by changing the theme</descr>
  </option>
  <option>
    <name>themescale</name>
    <type>bool</type>
    <default>false</default>
    <opt>T</opt>
    <longopt>themescale</longopt>
    <descr>Alternate theme scales</descr>
  </option>
  <option>
    <name>exceptiontest</name>
    <type>bool</type>
    <default>false</default>
    <opt>e</opt>
    <longopt>exception</longopt>
    <descr>Test throwing an exception in main window's creator</descr>
  </option>

  <option>
    <name>splashtest</name>
    <type>bool</type>
    <default>false</default>
    <opt>l</opt>
    <longopt>splash</longopt>
    <descr>Show a splash window</descr>
  </option>

  <option>
    <name>splashtransparent</name>
    <type>bool</type>
    <default>false</default>
    <opt>r</opt>
    <longopt>transparent</longopt>
    <descr>Show a splash window with a rounded border</descr>
  </option>

  <mutex>
    <name>state</name>
    <name>usemain</name>
    <name>showhide</name>
    <name>usetheme</name>
    <name>themescale</name>
    <name>exceptiontest</name>
    <name>splashtest</name>
  </mutex>
  <defaultoptions />
</optclass>
