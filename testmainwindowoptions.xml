<optclass name="testmainwindowoptions">
  <option>
    <name>state</name>
    <type>bool</type>
    <default>false</default>
    <opt>s</opt>
    <longopt>state</longopt>
    <descr>Verify on_state_update() callbacks</descr>
  </option>
  <option>
    <name>usemain</name>
    <type>bool</type>
    <default>false</default>
    <opt>m</opt>
    <longopt>usemain</longopt>
    <descr>Change main window's color</descr>
  </option>
  <option>
    <name>showhide</name>
    <type>bool</type>
    <default>false</default>
    <opt>s</opt>
    <longopt>showhide</longopt>
    <descr>Change color via show()/hide()</descr>
  </option>
  <option>
    <name>usetheme</name>
    <type>bool</type>
    <default>false</default>
    <opt>t</opt>
    <longopt>usetheme</longopt>
    <descr>Change color by changing the theme</descr>
  </option>
  <option>
    <name>themescale</name>
    <type>bool</type>
    <default>false</default>
    <opt>T</opt>
    <longopt>themescale</longopt>
    <descr>Alternate theme scales</descr>
  </option>
  <option>
    <name>roundborder</name>
    <type>bool</type>
    <default>false</default>
    <opt>r</opt>
    <longopt>roundborder</longopt>
    <descr>Test round borders</descr>
  </option>
  <mutex>
    <name>state</name>
    <name>usemain</name>
    <name>showhide</name>
    <name>usetheme</name>
    <name>themescale</name>
    <name>roundborder</name>
  </mutex>
  <defaultoptions />
</optclass>
