<optclass name="testlistoptions">

  <option>
    <name>rows</name>
    <type>size_t</type>
    <opt>r</opt>
    <longopt>rows</longopt>
    <hasvalue />
    <descr>Minimum number of rows in the list that are visible</descr>
  </option>
  <option>
    <name>maxrows</name>
    <type>size_t</type>
    <opt>m</opt>
    <hasvalue />
    <longopt>maxrows</longopt>
    <descr>Maximum number of rows in the list that are visible</descr>
  </option>

  <option>
    <name>height</name>
    <type>double</type>
    <opt>h</opt>
    <longopt>height</longopt>
    <hasvalue />
    <descr>Height of the list, in millimeters</descr>
  </option>

  <option>
    <name>multiple</name>
    <type>bool</type>
    <default>false</default>
    <opt>u</opt>
    <longopt>multiple</longopt>
    <descr>Multiple selection list</descr>
  </option>

  <option>
    <name>bullets</name>
    <type>bool</type>
    <default>false</default>
    <opt>b</opt>
    <longopt>bullets</longopt>
    <descr>Use bulleted list style</descr>
  </option>

  <option>
    <name>callback</name>
    <type>bool</type>
    <default>false</default>
    <opt>c</opt>
    <longopt>callback</longopt>
    <descr>Test item callbacks</descr>
  </option>

  <option>
    <name>test</name>
    <type>bool</type>
    <default>false</default>
    <opt>t</opt>
    <longopt>test</longopt>
    <descr>Invoked by make check</descr>
  </option>

  <mutex>
    <name>callback</name>
    <name>test</name>
  </mutex>

  <option>
    <name>hier</name>
    <type>bool</type>
    <default>false</default>
    <longopt>hier</longopt>
    <descr>Hierarchical list test</descr>
  </option>

  <option>
    <name>table</name>
    <type>bool</type>
    <default>false</default>
    <longopt>table</longopt>
    <descr>Create a table</descr>

    <group>

      <option>
	<name>adjustable</name>
	<type>bool</type>
	<default>false</default>
	<longopt>adjustable</longopt>
	<descr>Create an adjustable table</descr>
      </option>

      <option>
	<name>minwidth</name>
	<type>bool</type>
	<default>false</default>
	<longopt>minwidth</longopt>
	<descr>Specify minimum column widths</descr>
      </option>

      <option>
	<name>width</name>
	<type>double</type>
	<default>0</default>
	<longopt>width</longopt>
	<descr>Table width (mm)</descr>
      </option>

      <option>
	<name>maximum_table_width</name>
	<type>double</type>
	<default>0</default>
	<longopt>maximum-width</longopt>
	<descr>Maximum table width (mm)</descr>
      </option>
    </group>
  </option>

  <mutex>
    <name>test</name>
    <name>hier</name>
    <name>table</name>
    <name>callback</name>
  </mutex>

  <defaultoptions />
</optclass>
