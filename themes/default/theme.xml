<?xml version="1.0" encoding="utf-8"?>
<theme>

  <name>Default theme</name>

  <dim id="no-padding" axis="pixels">0</dim>

  <color id="transparent">
    <a>0</a>
  </color>

  <color id="0%" />

  <color id="10%">
    <r>.1</r>
    <g>.1</g>
    <b>.1</b>
  </color>

  <color id="30%">
    <r>.3</r>
    <g>.3</g>
    <b>.3</b>
  </color>

  <color id="50%">
    <r>.5</r>
    <g>.5</g>
    <b>.5</b>
  </color>

  <color id="70%">
    <r>.7</r>
    <g>.7</g>
    <b>.7</b>
  </color>

  <color id="75%">
    <r>.75</r>
    <g>.75</g>
    <b>.75</b>
  </color>

  <color id="80%">
    <r>.8</r>
    <g>.8</g>
    <b>.8</b>
  </color>

  <color id="90%">
    <r>.9</r>
    <g>.9</g>
    <b>.9</b>
  </color>

  <color id="100%">
    <r>1</r>
    <g>1</g>
    <b>1</b>
  </color>

  <color id="modal_shade">
    <r>0</r>
    <g>0</g>
    <b>0</b>
    <a>.5</a>
  </color>

  <color id="mainwindow_background" scale="75%" />

  <color id="action_color1" scale="10%" />
  <color id="action_color2" scale="50%" />

  <color id="inputfocus_color1" scale="10%" />
  <color id="inputfocus_color2" scale="50%" />

  <!-- Stock borders -->

  <border id="empty">
    <width axis="pixels">0</width>
    <height axis="pixels">0</height>
  </border>

  <border id="thin">
    <width axis="horiz">.4</width>
    <height axis="vert">.4</height>
  </border>

  <border id="thin_0%" from="thin">
    <color>0%</color>
  </border>

  <border id="thick">
    <width axis="horiz">.75</width>
    <height axis="vert">.75</height>
  </border>

  <border id="thick_0%" from="thick">
    <color>0%</color>
  </border>

  <border id="thick_50%" from="thick">
    <color>50%</color>
  </border>

  <border id="thin_dashed_0%">
    <width axis="horiz">.4</width>
    <height axis="vert">.4</height>
    <dash>.4</dash>
    <color>0%</color>
  </border>

  <border id="thick_dashed_0%">
    <width axis="horiz">.75</width>
    <height axis="vert">.75</height>
    <dash>.4</dash>
    <color>0%</color>
  </border>

  <border id="inputfocusoff_border">
    <color>transparent</color>
    <width axis="horiz">.75</width>
    <height axis="vert">.75</height>
  </border>

  <border id="inputfocuson_border" from="inputfocusoff_border">
    <color>inputfocus_color1</color>
    <color2>inputfocus_color2</color2>
    <dash>.75</dash>
  </border>

  <border id="thin_inputfocusoff_border">
    <color>transparent</color>
    <width axis="horiz">.5</width>
    <height axis="vert">.5</height>
  </border>

  <border id="thin_inputfocuson_border" from="thin_inputfocusoff_border">
    <color>inputfocus_color1</color>
    <color2>inputfocus_color2</color2>
    <dash>.75</dash>
  </border>

  <!-- grid padding -->

  <dim id="grid_horiz_padding" axis="horiz">.5</dim>
  <dim id="grid_vert_padding" axis="vert">.5</dim>

  <!--
      Button borders are size in units based on
      button_base_[horiz|vert].

Normal action button border: 3 units radius = 6 padding, 1 unit width/height=7
units width/height.

Special action button border: 2 units radius = 4 padding, 3 unit width/height=7

Padding: (normal|special)_action_inner_(hpad|vpad).

  -->
  <dim id="button_base_horiz" axis="horiz">.2</dim>
  <dim id="button_base_vert"  axis="vert">.2</dim>

  <border id="normal_button_border">
    <width scale="button_base_horiz">1</width>
    <height scale="button_base_vert">1</height>
    <hradius scale="button_base_horiz">3</hradius>
    <vradius scale="button_base_vert">3</vradius>
    <dash axis="horiz">.5</dash>
    <dash axis="vert">.5</dash>
    <color>action_color1</color>
    <color2>action_color2</color2>
  </border>

  <border id="special_button_border">
    <width scale="button_base_horiz">3</width>
    <height scale="button_base_vert">3</height>
    <hradius scale="button_base_horiz">2</hradius>
    <vradius scale="button_base_vert">2</vradius>
    <color>action_color1</color>
  </border>

  <color  id="button_normal_color" scale="70%" />
  <color  id="button_selected_color" scale="80%" />
  <color  id="button_active_color" scale="100%" />

  <!-- Fonts -->

  <font id="sans_serif">
    <family>liberation sans</family>
  </font>

  <font id="serif">
    <family>liberation serif</family>
  </font>

  <font id="mono">
    <family>liberation mono</family>
  </font>

  <font id="list" from="sans_serif">
    <point_size>12</point_size>
  </font>

  <font id="combobox" from="sans_serif">
    <point_size>12</point_size>
  </font>

  <font id="menubar" from="sans_serif">
    <point_size>12</point_size>
  </font>

  <font id="button" from="serif">
    <point_size>16</point_size>
  </font>

  <font id="tooltip" from="sans_serif">
    <point_size>12</point_size>
  </font>

  <font id="combobox" from="label" />

  <font id="menu" from="label" />

  <font id="menu_shortcut" from="serif">
    <point_size>12</point_size>
    <slant>italic</slant>
    <weight>bold</weight>
  </font>

  <font id="dialog_label" from="serif">
    <point_size>16</point_size>
  </font>

  <!-- Labels -->

  <font id="label" from="sans_serif">
    <point_size>14</point_size>
  </font>

  <color id="label_foreground_color" scale="10%" />

  <font id="label_title" from="label">
    <scale>3</scale>
  </font>

  <font id="label_header" from="label">
    <scale>1.3</scale>
  </font>

  <!-- Input fields -->

  <font id="textedit" from="mono">
    <point_size>12</point_size>
  </font>

  <font id="password" from="mono">
    <point_size>12</point_size>
  </font>

  <color id="textedit_foreground_color" scale="0%" />
  <color id="textedit_background_color" scale="100%" />

  <border id="textedit_border" from="thin_0%" />

  <!-- Scrollbars -->

  <color  id="scrollbar_background_color" scale="30%" />
  <color  id="scrollbar_foreground_color" scale="70%" />
  <color  id="scrollbar_foreground_highlight_color" scale="80%" />
  <color  id="scrollbar_dragging_color" scale="90%" />

  <border id="scrollbarfocusoff_border" from="inputfocusoff_border">
    <color>10%</color>
  </border>

  <!-- Tooltips -->

  <color id="tooltip_background_color" scale="90%" />

  <!-- Border when an alpha channel is available -->
  <border id="tooltip_border" from="thin_0%">
    <hradius>1</hradius>
    <vradius>1</vradius>
  </border>

  <!-- Border when an alpha channel is not available -->

  <border id="tooltip_border_square" from="thin_0%" />
  <dim id="tooltip_border_square_padding_h" axis="horiz">1</dim>
  <dim id="tooltip_border_square_padding_v" axis="vert">1</dim>

  <dim id="tooltip_x_offset" axis="horiz">1</dim>
  <dim id="tooltip_y_offset" axis="vert">1</dim>

  <!-- Selection lists -->

  <dim id="list_v_padding" axis="vert">.2</dim>
  <dim id="list_left_padding" axis="horiz">.2</dim>
  <dim id="list_inner_padding" axis="horiz">.5</dim>
  <dim id="list_right_padding" axis="horiz">.2</dim>

  <border id="list_border" from="thin_0%" />

  <border id="list_separator_border" from="thin_0%">
    <color>0%</color>
    <color2>50%</color2>
    <dash axis="horiz">1</dash>
  </border>

  <color id="list_label_color" scale="10%" />

  <color id="list_background_color" scale="100%" />

  <color id="list_selected_color" scale="80%" />

  <color id="list_highlighted_color" scale="90%" />

  <color id="list_current_color" scale="70%" />

  <!-- Combo-boxes -->

  <border id="combobox_border" from="thin_0%" />

  <color id="combobox_background_color" scale="90%" />

  <color id="combobox_selected_color" scale="80%" />

  <color id="combobox_highlighted_color" scale="100%" />

  <color id="combobox_current_color" scale="70%" />

  <border id="comboboxbuttonfocusoff_border" from="inputfocusoff_border">
    <color>inputfocus_color2</color>
  </border>

  <border id="comboboxbuttonfocuson_border" from="inputfocuson_border" />

  <!-- Menu bar -->

  <color id="menubar_background_color" scale="80%" />

  <border id="menubar_border" from="thin_0%">
    <color>0%</color>
    <color2>30%</color2>
    <dash>.75</dash>
  </border>

  <color id="menu_background_color" scale="80%" />
  <color id="menu_highlighted_color" scale="90%" />
  <color id="menu_clicked_color" scale="100%" />

  <color id="menu_popup_background_color" scale="90%" />
  <color id="menu_popup_highlighted_color" scale="80%" />
  <color id="menu_popup_clicked_color" scale="100%" />

  <border id="menu_inputfocusoff_border">
    <color>transparent</color>
    <width axis="horiz">.2</width>
    <height axis="vert">.2</height>
  </border>

  <border id="menu_inputfocuson_border" from="menu_inputfocusoff_border">
    <color>inputfocus_color1</color>
    <color2>inputfocus_color2</color2>
    <dash>.5</dash>
  </border>

  <border id="menu_popup_border">
    <color>inputfocus_color1</color>
    <width axis="horiz">.5</width>
    <height axis="vert">.5</height>
  </border>

  <dim id="menu_shortcut_padding" axis="horiz">5</dim>

  <font id="menu_font" from="serif">
    <point_size>12</point_size>
  </font>

  <font id="menu_shortcut_font" from="sans_serif">
    <weight>bold</weight>
    <point_size>10</point_size>
  </font>

  <!-- Progress bar -->

  <border id="progressbar" from="thick_dashed_0%">
    <color>10%</color>
    <color2>30%</color2>
    <hradius>.1</hradius>
    <vradius>.1</vradius>
  </border>

  <dim id="progressbar" axis="horiz">100</dim>

  <font id="progressbar" from="serif">
    <point_size>16</point_size>
  </font>

  <color id="progressbar_foreground_color" scale="10%" />
  <color id="progressbar_background_color" scale="100%" />

  <color id="progressbar_value_0_color" scale="0%" />
  <color id="progressbar_value_100_color" scale="70%" />

  <color_gradient id="progressbar">
    <color value="0">progressbar_value_0_color</color>
    <color value="1">progressbar_value_100_color</color>
    <color value="2">progressbar_value_100_color</color>
  </color_gradient>

  <!-- Books -->

  <dim id="book_tab_h_padding" axis="horiz">1</dim>
  <dim id="book_tab_v_padding" axis="horiz">1</dim>
  <color id="book_tab_inactive_color" scale="50%" />
  <color id="book_tab_active_color" scale="70%" />
  <color id="book_tab_warm_color" scale="80%" />
  <color id="book_tab_hot_color" scale="100%" />

  <color id="page_background" scale="80%" />
  <border id="page_border" from="thin_0%" />

  <border id="book_tab_border" from="thin_0%">
    <hradius>.5</hradius>
    <vradius>.5</vradius>
  </border>

  <dim id="book_scroll_height" axis="vert">8</dim>

  <font id="book_tab_font" from="serif">
    <point_size>12</point_size>
  </font>

  <!-- Panes -->

  <color id="pane_slider_background" scale="100%" />

  <border id="pane_border" from="thin_0%" />

  <border id="pane_slider">
    <color>30%</color>
    <color2>50%</color2>
    <dash>2</dash>
    <dash>.75</dash>
    <width axis="horiz">1</width>
    <height axis="vert">1</height>
  </border>

  <border id="pane_slider_focusoff_border" from="thin_inputfocusoff_border" />

  <border id="pane_slider_focuson_border" from="pane_slider_focusoff_border">
    <color>inputfocus_color1</color>
    <color2>inputfocus_color2</color2>
    <dash>.75</dash>
  </border>

  <!-- Dialogs -->

  <color id="dialog_background" scale="90%" />

  <!-- A dialog with a single "Ok" button -->

  <dim id="dialog-v-padding" axis="vert">4</dim>
  <dim id="dialog-h-padding" axis="vert">4</dim>

  <layout id="ok-dialog">
    <valign>
      <row>0</row>
      <valign>middle</valign>
    </valign>

    <valign>
      <row>1</row>
      <valign>middle</valign>
    </valign>

    <append_row>
      <name>icon-and-message</name>
    </append_row>

    <append_row>
      <name>ok-button-container</name>
    </append_row>
  </layout>

  <factory id="icon-and-message">
    <padding>
      <side>top</side>
      <padding>dialog-v-padding</padding>
    </padding>

    <padding>
      <side>bottom</side>
      <padding>dialog-v-padding</padding>
    </padding>

    <padding>
      <side>left</side>
      <padding>dialog-h-padding</padding>
    </padding>

    <padding>
      <side>right</side>
      <padding>dialog-h-padding</padding>
    </padding>

    <border>
      <side>bottom</side>
      <border>thick_50%</border>
    </border>

    <element>
      <name>icon</name>
    </element>

    <padding>
      <side>top</side>
      <padding>dialog-v-padding</padding>
    </padding>

    <padding>
      <side>bottom</side>
      <padding>dialog-v-padding</padding>
    </padding>

    <padding>
      <side>right</side>
      <padding>dialog-h-padding</padding>
    </padding>

    <border>
      <side>bottom</side>
      <border>thick_50%</border>
    </border>

    <element>
      <name>message</name>
    </element>
  </factory>

  <factory id="ok-button-container">
    <padding>
      <side>left</side>
      <padding>no-padding</padding>
    </padding>

    <padding>
      <side>right</side>
      <padding>no-padding</padding>
    </padding>

    <padding>
      <side>top</side>
      <padding>no-padding</padding>
    </padding>

    <padding>
      <side>bottom</side>
      <padding>no-padding</padding>
    </padding>

    <colspan>
      <columns>2</columns>
    </colspan>
    <halign>
      <halign>right</halign>
    </halign>

    <include>
      <name>ok-button-row</name>
      <background_color>75%</background_color>
    </include>
  </factory>

  <layout id="ok-button-row">
    <append_row>
      <name>ok-button</name>
    </append_row>
  </layout>

  <factory id="ok-button">
    <element>
      <name>filler</name>
    </element>

    <padding>
      <side>right</side>
      <padding>dialog-h-padding</padding>
    </padding>

    <element>
      <name>ok</name>
    </element>
  </factory>

  <!-- A dialog with "Ok" and "Cancel" buttons -->

  <layout id="ok-cancel-dialog">
    <valign>
      <row>0</row>
      <valign>middle</valign>
    </valign>

    <valign>
      <row>1</row>
      <valign>middle</valign>
    </valign>

    <append_row>
      <name>icon-and-message</name>
    </append_row>

    <append_row>
      <name>ok-cancel-button-container</name>
    </append_row>
  </layout>

  <factory id="ok-cancel-button-container">
    <padding>
      <side>left</side>
      <padding>no-padding</padding>
    </padding>

    <padding>
      <side>right</side>
      <padding>no-padding</padding>
    </padding>

    <padding>
      <side>top</side>
      <padding>no-padding</padding>
    </padding>

    <padding>
      <side>bottom</side>
      <padding>no-padding</padding>
    </padding>

    <colspan>
      <columns>2</columns>
    </colspan>
    <halign>
      <halign>fill</halign>
    </halign>

    <include>
      <name>ok-cancel-button-row</name>
      <background_color>75%</background_color>
    </include>
  </factory>

  <layout id="ok-cancel-button-row">
    <append_row>
      <name>ok-cancel-button</name>
    </append_row>
  </layout>

  <factory id="ok-cancel-button">
    <padding>
      <side>left</side>
      <padding>dialog-h-padding</padding>
    </padding>

    <element>
      <name>cancel</name>
    </element>

    <element>
      <name>filler</name>
    </element>

    <padding>
      <side>right</side>
      <padding>dialog-h-padding</padding>
    </padding>

    <element>
      <name>ok</name>
    </element>
  </factory>

  <!-- A dialog with an input field -->

  <layout id="input-dialog">
    <valign>
      <row>0</row>
      <valign>middle</valign>
    </valign>

    <valign>
      <row>1</row>
      <valign>middle</valign>
    </valign>

    <append_row>
      <name>icon-and-input-container</name>
    </append_row>

    <append_row>
      <name>ok-cancel-button-container</name>
    </append_row>
  </layout>

  <factory id="icon-and-input-container">
    <padding>
      <side>top</side>
      <padding>dialog-v-padding</padding>
    </padding>

    <padding>
      <side>bottom</side>
      <padding>dialog-v-padding</padding>
    </padding>

    <padding>
      <side>left</side>
      <padding>dialog-h-padding</padding>
    </padding>

    <padding>
      <side>right</side>
      <padding>dialog-h-padding</padding>
    </padding>

    <border>
      <side>bottom</side>
      <border>thick_50%</border>
    </border>

    <element>
      <name>icon</name>
    </element>

    <padding>
      <side>top</side>
      <padding>dialog-v-padding</padding>
    </padding>

    <padding>
      <side>bottom</side>
      <padding>dialog-v-padding</padding>
    </padding>

    <padding>
      <side>right</side>
      <padding>dialog-h-padding</padding>
    </padding>

    <border>
      <side>bottom</side>
      <border>thick_50%</border>
    </border>

    <include>
      <name>label-and-input-container</name>
    </include>
  </factory>

  <layout id="label-and-input-container">
    <valign>
      <row>0</row>
      <valign>top</valign>
    </valign>

    <append_row>
      <name>label-and-input</name>
    </append_row>
  </layout>

  <factory id="label-and-input">
    <padding>
      <side>top</side>
      <padding>no-padding</padding>
    </padding>

    <padding>
      <side>left</side>
      <padding>no-padding</padding>
    </padding>

    <padding>
      <side>bottom</side>
      <padding>no-padding</padding>
    </padding>

    <element>
      <name>label</name>
    </element>

    <padding>
      <side>top</side>
      <padding>no-padding</padding>
    </padding>

    <padding>
      <side>right</side>
      <padding>no-padding</padding>
    </padding>

    <padding>
      <side>bottom</side>
      <padding>no-padding</padding>
    </padding>

    <element>
      <name>input</name>
    </element>
  </factory>

  <!-- File open dialog -->

  <layout id="file-dialog">
    <valign>
      <row>0</row>
      <valign>middle</valign>
    </valign>

    <append_row>
      <name>file-input-row</name>
    </append_row>

    <valign>
      <row>1</row>
      <valign>middle</valign>
    </valign>

    <append_row>
      <name>directory-label-row</name>
    </append_row>

    <valign>
      <row>2</row>
      <valign>middle</valign>
    </valign>

    <append_row>
      <name>filter-row</name>
    </append_row>

    <append_row>
      <name>directory-contents-row</name>
    </append_row>

    <append_row>
      <name>ok-cancel-button-container</name>
    </append_row>
  </layout>

  <factory id="file-input-row">
    <padding>
      <side>top</side>
      <padding>dialog-v-padding</padding>
    </padding>

    <padding>
      <side>left</side>
      <padding>dialog-h-padding</padding>
    </padding>

    <halign>
      <halign>right</halign>
    </halign>

    <element>
      <name>file-input-label</name>
    </element>

    <padding>
      <side>top</side>
      <padding>dialog-v-padding</padding>
    </padding>

    <padding>
      <side>right</side>
      <padding>dialog-h-padding</padding>
    </padding>

    <element>
      <name>file-input-field</name>
    </element>
  </factory>

  <factory id="directory-label-row">
    <padding>
      <side>left</side>
      <padding>dialog-h-padding</padding>
    </padding>

    <halign>
      <halign>right</halign>
    </halign>

    <element>
      <name>directory-label</name>
    </element>

    <padding>
      <side>right</side>
      <padding>dialog-h-padding</padding>
    </padding>

    <element>
      <name>directory-field</name>
    </element>
  </factory>
  <factory id="filter-row">
    <padding>
      <side>left</side>
      <padding>dialog-h-padding</padding>
    </padding>

    <halign>
      <halign>right</halign>
    </halign>

    <element>
      <name>filter-label</name>
    </element>

    <padding>
      <side>right</side>
      <padding>dialog-h-padding</padding>
    </padding>

    <element>
      <name>filter-field</name>
    </element>
  </factory>

  <factory id="directory-contents-row">
    <padding>
      <side>left</side>
      <padding>dialog-h-padding</padding>
    </padding>

    <element>
      <name>filler</name>
    </element>

    <padding>
      <side>right</side>
      <padding>dialog-h-padding</padding>
    </padding>

    <halign>
      <halign>fill</halign>
    </halign>

    <element>
      <name>directory-contents-list</name>
    </element>
  </factory>

  <!-- Font for the "Directory" name -->

  <font id="filedir_directoryfont" from="mono">
    <point_size>12</point_size>
  </font>

  <!-- Directory contents element -->
  <color id="filedir_highlight_fg" scale="100%"/>
