<?xml version="1.0"?>

<sxg>

  <picture id="knob">
    <type>pixmap</type>
    <size>scaled</size>
    <width>6</width>
    <height>6</height>
  </picture>

  <pixmap id="mask">
    <size>scaled</size>
    <width>6</width>
    <height>6</height>
    <gc id="mask_gc" />
  </pixmap>

  <gc id="mask_gc">
    <function>set</function>
    <fill_arc_mode>pie_slice</fill_arc_mode>

    <arcs>
      <fill />
      <arc>
	<x>0</x>
	<y>0</y>
	<width>6</width>
	<height>6</height>
	<angle1>0</angle1>
	<angle2>360</angle2>
      </arc>
    </arcs>

    <arcs>
      <arc>
	<x>0</x>
	<y>0</y>
	<width>6</width>
	<height>6</height>
	<angle1>0</angle1>
	<angle2>360</angle2>
      </arc>
    </arcs>
  </gc>

  <render id="knob">
    <fill>
      <color>scrollbar_background_color</color>

      <rectangle>
	<x>0</x>
	<y>0</y>
	<width>6</width>
	<height>6</height>
      </rectangle>
    </fill>

    <composite>
      <op>over</op>
      <width>6</width>
      <height>6</height>

      <mask>
	<pixmap>mask</pixmap>
      </mask>

      <src>
	<picture>outline</picture>
      </src>
    </composite>
  </render>

  <gc id="mask_gc">
    <function>clear</function>

    <clear />

    <function>set</function>

    <arcs>
      <fill />
      <arc>
	<x>1</x>
	<y>1</y>
	<width>4</width>
	<height>4</height>
	<angle1>0</angle1>
	<angle2>360</angle2>
      </arc>
    </arcs>

    <arcs>
      <arc>
	<x>1</x>
	<y>1</y>
	<width>4</width>
	<height>4</height>
	<angle1>0</angle1>
	<angle2>360</angle2>
      </arc>
    </arcs>
  </gc>

  <render id="knob">
    <composite>
      <op>over</op>
      <width>6</width>
      <height>6</height>

      <mask>
	<pixmap>mask</pixmap>
      </mask>

      <src>
	<picture>fill-knob</picture>
      </src>
    </composite>
  </render>
</sxg>
