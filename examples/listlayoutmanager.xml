<optclass name="options">
  <option>
    <name>rows</name>
    <type>size_t</type>
    <opt>r</opt>
    <longopt>rows</longopt>
    <hasvalue />
    <descr>Minimum number of rows in the list that are visible</descr>
  </option>
  <option>
    <name>maxrows</name>
    <type>size_t</type>
    <opt>m</opt>
    <hasvalue />
    <longopt>maxrows</longopt>
    <descr>Maximum number of rows in the list that are visible</descr>
  </option>

  <option>
    <name>height</name>
    <type>double</type>
    <opt>h</opt>
    <longopt>height</longopt>
    <hasvalue />
    <descr>Height of the list, in millimeters</descr>
  </option>

  <option>
    <name>multiple</name>
    <type>bool</type>
    <default>false</default>
    <opt>u</opt>
    <longopt>multiple</longopt>
    <descr>Multiple selection list</descr>
  </option>
  <option>
    <name>bullets</name>
    <type>bool</type>
    <default>false</default>
    <opt>b</opt>
    <longopt>bullets</longopt>
    <descr>Use bulleted list style</descr>
  </option>
  <defaultoptions />
</optclass>
