<?xml version="1.0" encoding="utf-8"?>
<theme version="1"
       xmlns:xi="http://www.w3.org/2003/XInclude">

  <dim id="page-padding">30</dim>

  <layout id="main-window-grid" type="grid">
    <append_row>
      <name>main-window-contents</name>
    </append_row>
  </layout>

  <factory id="main-window-contents" type="grid">
    <container>
      <name>settings</name>
      <type>book</type>
    </container>
  </factory>

  <layout id="settings" type="book">
    <append_pages>
      <name>settings-pages</name>
    </append_pages>
    <open>
      <page>0</page>
    </open>
  </layout>

  <factory id="settings-pages" type="book">

    <halign>
      <halign>center</halign>
    </halign>

    <valign>
      <valign>bottom</valign>
    </valign>

    <add>
      <tab>
	<element>
	  <label>${decoration:underline}G${decoration:none}eneral</label>
	</element>
      </tab>
      <page>
	<container>
	  <type>grid</type>
	  <name>general-page</name>
	</container>
      </page>
      <shortcut>Alt-G</shortcut>
    </add>

    <halign>
      <halign>center</halign>
    </halign>

    <valign>
      <valign>bottom</valign>
    </valign>

    <add>
      <tab>
	<element>
	  <label>${decoration:underline}N${decoration:none}etwork</label>
	</element>
      </tab>
      <page>
	<container>
	  <type>grid</type>
	  <name>network-page</name>
	</container>
      </page>
      <shortcut>Alt-N</shortcut>
    </add>

    <halign>
      <halign>center</halign>
    </halign>

    <valign>
      <valign>bottom</valign>
    </valign>

    <add>
      <tab>
	<element>
	  <label>${decoration:underline}L${decoration:none}ocal</label>
	</element>
      </tab>
      <page>
	<container>
	  <type>grid</type>
	  <name>local-page</name>
	</container>
      </page>
      <shortcut>Alt-L</shortcut>
    </add>
  </factory>

  <layout id="general-page" type="grid">
    <append_row>
      <name>general-page-row</name>
    </append_row>
  </layout>

  <factory id="general-page-row" type="grid">
    <padding>
      <side>left</side>
      <padding>page-padding</padding>
    </padding>

    <padding>
      <side>right</side>
      <padding>page-padding</padding>
    </padding>

    <element>
      <name>general-page-placeholder</name>
    </element>
  </factory>

  <layout id="network-page" type="grid">
    <append_row>
      <name>network-page-row</name>
    </append_row>
  </layout>

  <factory id="network-page-row" type="grid">
    <padding>
      <side>left</side>
      <padding>page-padding</padding>
    </padding>

    <padding>
      <side>right</side>
      <padding>page-padding</padding>
    </padding>
    <element>
      <name>network-page-placeholder</name>
    </element>
  </factory>

  <layout id="local-page" type="grid">
    <append_row>
      <name>local-page-row</name>
    </append_row>
  </layout>

  <factory id="local-page-row" type="grid">
    <padding>
      <side>left</side>
      <padding>page-padding</padding>
    </padding>

    <padding>
      <side>right</side>
      <padding>page-padding</padding>
    </padding>
    <element>
      <name>local-page-placeholder</name>
    </element>
  </factory>

</theme>
